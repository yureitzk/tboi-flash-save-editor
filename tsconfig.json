{
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*", "package.json"],
	"exclude": ["node_modules", "test"]
}
